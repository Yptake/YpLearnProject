<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_layout_background_color"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="@dimen/dp_200"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_status_empty_img"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/default_empty" />

        <TextView
            android:id="@+id/tv_status_empty_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/status_layout_manager_empty"
            android:textColor="@color/status_layout_tip_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bt_status_empty_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/status_layout_manager_retry"
            android:textColor="@color/status_layout_click_view_text_color"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
